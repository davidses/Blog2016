<!-- ---------------------- VISTA ---------------------- -->

<h1> <%= @article.title %></h1>
<% if not @article.user.nil? %>
	<p>
		Escrito por: <%= @article.user.email %>
	</p>
<%end%>
<p>
	Visitas: <%= @article.visits_count %>
</p>
<div>
	<p> <%= @article.body %></p>
</div>
<div>
	<h3>Comentarios</h3>
	<%= render "comments/form" %>
	<ul>
		<% @article.comments.each do |comment| %>
			<li>
				<%= comment.body %> - <%= comment.user.email %>
			</li>
		<% end %>
	</ul>
</div>
<div>
	<%= link_to "Editar", edit_article_path(@article),class: "btn_red" %>
</div>