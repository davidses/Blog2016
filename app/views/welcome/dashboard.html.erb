<% @articles.each do |article| %>
	<h1><%= link_to article.title, article %></h1>
	<div>
		<%= article.body %> - <%= link_to "Eliminar", article, method: :delete, class: "btn_red" %> -
		<% if article.may_publish? %>
		 <%= link_to "Publicar", "/articles/#{article.id}/publish", method: :put, class: "btn_blue" %>
		<% end %>
	</div>
<%end%>